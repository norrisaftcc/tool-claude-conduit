# Claude Conduit Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
CONDUIT_PORT=3001
LOG_LEVEL=info
NODE_ENV=development

# Claude API
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# MCP Server Configuration (internal config file + env variables for secrets)
# Leave MCP_CONFIG_PATH empty to use internal config
# MCP_CONFIG_PATH=  

# MCP Server Credentials (keep these secret!)
FILESYSTEM_MCP_PATH=/path/to/filesystem-server
TASKMASTER_API_KEY=your-taskmaster-api-key
SCOUT_API_KEY=your-scout-api-key
GITHUB_MCP_TOKEN=ghp_your-github-token

# Cloud Memory (Railway App)
CLOUD_MEMORY_URL=https://csi-prism-remote-mcp-production.up.railway.app
CLOUD_MEMORY_API_KEY=your-api-key-here

# Plugin Configuration
PLUGINS_DIR=./plugins
PLUGIN_CACHE_TTL=3600

# Security
SESSION_SECRET=your-long-random-session-secret
JWT_SECRET=your-jwt-secret-for-api-auth

# Feature Flags
ENABLE_CLOUD_MEMORY=true
ENABLE_PLUGIN_AUTO_UPDATE=false
ENABLE_METRICS=true

# External Services
SEARCH_API_KEY=your-search-api-key
GITHUB_TOKEN=ghp_your-github-token

# EXPERIMENTAL: Knowledge Graph Database
KNOWLEDGE_GRAPH_ENDPOINT=your-cloud-graph-endpoint
KNOWLEDGE_GRAPH_API_KEY=your-graph-api-key
KNOWLEDGE_GRAPH_USERNAME=your-graph-username
KNOWLEDGE_GRAPH_PASSWORD=your-graph-password

# Development
DEBUG=conduit:*
VERBOSE_LOGGING=false